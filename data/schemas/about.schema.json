{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "about.schema.json",
  "title": "About Schema",
  "description": "Schema for personal/professional about information",
  "type": "object",
  "required": ["name", "title", "affiliation", "email", "bio", "education"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Full name"
    },
    "title": {
      "type": "string",
      "description": "Professional title or position"
    },
    "affiliation": {
      "type": "string",
      "description": "Primary institutional affiliation"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Contact email address"
    },
    "bio": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      },
      "description": "Biography as array of paragraphs"
    },
    "education": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["degree", "institution", "year"],
        "properties": {
          "degree": {
            "type": "string",
            "description": "Degree name (e.g., PhD, MSc, BA)"
          },
          "institution": {
            "type": "string",
            "description": "Educational institution name"
          },
          "year": {
            "type": "integer",
            "minimum": 1900,
            "maximum": 2100,
            "description": "Year of graduation or expected graduation"
          }
        },
        "additionalProperties": false
      },
      "description": "Educational history"
    },
    "links": {
      "type": "object",
      "properties": {
        "github": {
          "type": "string",
          "format": "uri",
          "description": "GitHub profile URL"
        },
        "scholar": {
          "type": "string",
          "format": "uri",
          "description": "Google Scholar profile URL"
        },
        "twitter": {
          "type": "string",
          "format": "uri",
          "description": "Twitter/X profile URL"
        },
        "linkedin": {
          "type": "string",
          "format": "uri",
          "description": "LinkedIn profile URL"
        },
        "researchgate": {
          "type": "string",
          "format": "uri",
          "description": "ResearchGate profile URL"
        }
      },
      "additionalProperties": false,
      "description": "Optional social/professional profile links"
    }
  },
  "additionalProperties": false
}
